{% include 'templates/headerfooter.twig' %}

{% block PublishOffers %}
<div class="container mx-auto px-4 py-8">
    <form class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-2xl font-semibold text-gray-800 mb-6">Informations du stage</h2>
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold mb-2" for="entreprise">Nom de l'entreprise</label>
            <input class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="entreprise" type="text" placeholder="Nom de l'entreprise">
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold mb-2" for="competences">Compétences demandées</label>
            <input class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="competences" type="text" placeholder="Compétences demandées">
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold mb-2" for="localisation">Localisation</label>
            <input class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="localisation" type="text" placeholder="Localisation">
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold mb-2" for="promotions">Promotions concernées</label>
            <input class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="promotions" type="text" placeholder="Promotions concernées">
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold mb-2" for="duree">Durée du stage</label>
            <input class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="duree" type="text" placeholder="Durée du stage">
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold mb-2" for="remuneration">Rémunération</label>
            <input class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="remuneration" type="text" placeholder="Rémunération">
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold mb-2" for="date_publication">Date de publication de l'offre</label>
            <input class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="date_publication" type="date">
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold mb-2" for="places_disponibles">Nombre de places disponibles</label
            >
            <input class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="places_disponibles" type="number" min="1" placeholder="Nombre de places disponibles">
        </div>
        <a href="#" class="bg-blue-500 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">Publier l'offre de stage</a>
    </form>
</div>
{% endblock %}
{% include "templates/footer.twig" %}