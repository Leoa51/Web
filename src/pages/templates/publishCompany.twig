{% block title %}Entreprise - StageHub{% endblock %}
{% include 'templates/header.twig' %}
{% block content %}
    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-center">
            <h2 class="text-2xl font-semibold text-gray-800 mb-6">Votre Entreprise</h2>
        </div>

        <form class="bg-white shadow-md rounded-lg p-6">

            <div class="mb-4">
                <label class="block text-gray-700 font-semibold mb-2" for="entreprise">Nom de l'entreprise</label>
                <input class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="entreprise" type="text" placeholder="Nom de l'entreprise">
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 font-semibold mb-2" for="competences">secteur d'activité </label>
                <input class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="competences" type="text" placeholder=" secteur d'activité ">
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 font-semibold mb-2" for="places_disponibles">Localisation</label
                >
                <input class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="places_disponibles" type="number" min="1" placeholder="localisation">
                <div class="flex justify-end">
                    <a href="#" class="bg-blue-500 hover:bg-blue-700 text-white font-semibold py-2 px-8 rounded focus:outline-none focus:shadow-outline" type="submit">enregistrer</a>
                </div>

            </div>




{% endblock %}